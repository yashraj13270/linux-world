import google.generativeai as genai
key = "   "
print(key)
genai.configure(api_key=key)
model = genai.GenerativeModel("gemini-2.5-flash")
while True:
user = input("Enter what you want to search ot type exit to close")
if user.lower() == "exit":
print("bye bye")
break
response = model.generative_content(user)
print("BOT :" , response.txt)
